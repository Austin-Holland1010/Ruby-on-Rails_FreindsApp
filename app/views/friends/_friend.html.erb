<% if user_signed_in? %>
  <div id="<%= dom_id friend %>">

  <div style="background:lightgrey !important" class="jumbotron jumbotron-fluid">
  <h1 class="display-4">
    <%= friend.first_name %>
    <%= friend.last_name %>
  </h1>
  <p class="lead">
    Email: <%= friend.email %> <br>
    Phone: <%= friend.phone %> <br>
    Employed: <%= friend.employed %>  
  </p>
  <hr class="my-4">
    <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-secondary" %>
    <%= link_to "Back to friends", friends_path, class:"btn btn-secondary" %>
  </div>
  </div>
<% else %>
  <h2>You need to sign in order to see a freind's details.</h2>
  <%= link_to "Sign In", new_user_session_path, class:"btn btn-secondary" %>
<% end %>